<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/reportTypeImg"
                android:layout_width="@dimen/cardview_large_icon_size"
                android:layout_height="@dimen/cardview_large_icon_size"
                android:layout_marginStart="@dimen/cardview_text_margin"
                android:layout_gravity="start"
                android:clickable="false"/>
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/cardview_text_margin"
                android:clickable="false"
                style="@android:style/TextAppearance.Material.DialogWindowTitle" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/cardview_text_margin"
                android:layout_marginEnd="@dimen/cardview_text_margin"
                style="@android:style/TextAppearance.Material.Caption"
                android:clickable="false"/>
            <TextView
                android:id="@+id/deleteBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                style="@android:style/TextAppearance.Material.Caption"
                android:textColor="@android:color/holo_red_dark" />
            <CheckBox
                android:id="@+id/statusBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/cardview_text_margin"
                android:layout_marginEnd="@dimen/cardview_text_margin"
                style="@android:style/TextAppearance.Material.Caption"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>

