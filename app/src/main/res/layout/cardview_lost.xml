<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/cardview_text_margin"
                        android:clickable="false"
                        style="@android:style/TextAppearance.Material.DialogWindowTitle" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/cardview_text_margin"
                        android:layout_marginEnd="@dimen/cardview_text_margin"
                        android:textColor="@android:color/holo_green_dark"
                        style="@android:style/TextAppearance.Material.Caption"/>
                    <ImageView
                        android:id="@+id/emailBtn"
                        android:layout_width="@dimen/cardview_small_icon_size"
                        android:layout_height="@dimen/cardview_small_icon_size"
                        android:background="@drawable/ic_email_black_24dp"
                        android:layout_gravity="bottom|end" />
                    <TextView
                        android:id="@+id/timestamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/cardview_text_margin"
                        android:layout_marginEnd="@dimen/cardview_text_margin"
                        style="@android:style/TextAppearance.Material.Caption"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/found"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/cardview_text_margin"
                    android:layout_marginEnd="@dimen/cardview_text_margin"
                    style="@android:style/TextAppearance.Material.Caption"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>

